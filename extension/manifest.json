{
    "name": "ReaderEase",
    "version": "0.0.0.1",
    "description": "Read online with ease.",
    "permissions": [
        // To inject script to current tab.
        // The alternative is to use content_script with <all_urls>, but that will
        // give scary warnings to the user.
        // https://developer.chrome.com/extensions/activeTab
        "activeTab",
        // To create new tabs
        "tabs", 
        // When you right click you see a drop down.
        "contextMenus",
        "storage",
        // This must match the tutorial page specified in background.js
        // Needed because we are injecting script to a different tab.
        // Luckily for us this cross-tab injection is always the same URL. 
        // https://developer.mozilla.org/en-US/docs/Mozilla/Add-ons/WebExtensions/manifest.json/permissions#Host_permissions
        "*://en.wikipedia.org/wiki/Reading"
    ],
    "background": {
        "scripts": [
          "third_party/jquery-3.5.1.min.js", 
          "third_party/hot-reload.js",
          "background.js"
          ], 
        "persistent": false
    },
    "commands":{
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+R"
            }
        }
    },
    "web_accessible_resources": [
        "images/checkMark.svg",
        "images/closeButton.svg",
        "images/downArrow.svg",
        "images/downArrowKey.svg",
        "images/instructionAutoRead.svg",
        "images/instructionHighlight.svg",
        "images/instructionKeywordToggle.svg",
        "images/instructionMove.svg",
        "images/instructionOnOff.svg",
        "images/instructionOnOffSmaller.svg",
        "images/instructionSentenceHop.svg",
        "images/instructionSpeed.svg", 
        "images/leftArrow.svg",
        "images/leftArrowKey.svg",
        "images/loadingIcon.svg",
        "images/logoWithBackground.svg",
        "images/pin.svg",
        "images/puzzlePiece.svg",
        "images/rightArrow.svg",
        "images/rightArrowKey.svg",
        "images/upArrow.svg",
        "images/upArrowKey.svg"
    ],
    "icons": { 
        "16": "images/logo16.png",
        "32": "images/logo32.png",
        "48": "images/logo48.png",
       "128": "images/logo128.png" },
    "browser_action": {
        "default_icon": {
            "16": "images/logo16.png",
            "32": "images/logo32.png",
            "48": "images/logo48.png",
            "128": "images/logo128.png"
        },
        "default_title": "ReaderEase"
    },
    "manifest_version": 2
}